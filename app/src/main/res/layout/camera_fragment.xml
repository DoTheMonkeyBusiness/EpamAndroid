<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextureView
        android:id="@+id/cameraFragmentTextureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/cameraFragmentBackToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/ic_chevron"
        android:contentDescription="@string/back_to_menu" />

    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_alignBottom="@id/cameraFragmentBackToMenuButton"
        android:layout_toStartOf="@id/cameraFragmentBackToMenuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cameraFragmentDogBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>