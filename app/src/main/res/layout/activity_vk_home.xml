<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/color_grey">



    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <include
                layout="@layout/activity_toolbar"
                android:id="@+id/activity_vk_home_toolbar"
        />

        <include
                android:id="@+id/vk_image_item"
                layout="@layout/vk_image_item"
                android:layout_width="match_parent"
                android:layout_height="300dp"
        />

        <include
                android:id="@+id/vk_info_item"
                layout="@layout/vk_info_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vk_image_item"
        />

        <include
                android:id="@+id/vk_whatsnew_item"
                layout="@layout/vk_whatsnew_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vk_info_item"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

        />


    </RelativeLayout>

</ScrollView>