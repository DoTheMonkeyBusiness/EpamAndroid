<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/real_white">

    <include
        android:id="@+id/fragment_podcasts_new_episodes_0_card"
        layout="@layout/new_episodes_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp" />

    <include
        android:id="@+id/fragment_podcasts_new_episodes_1_card"
        layout="@layout/new_episodes_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_podcasts_new_episodes_0_card"
        android:layout_marginBottom="4dp" />

    <include
        android:id="@+id/fragment_podcasts_new_episodes_2_card"
        layout="@layout/new_episodes_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_podcasts_new_episodes_1_card"
        android:layout_marginBottom="4dp"

        />

    <ImageView
        android:id="@+id/fragment_podcasts_new_episodes_all_episodes_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_podcasts_new_episodes_2_card"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_arrow_forward_blue" />

    <TextView
        android:id="@+id/fragment_podcasts_new_episodes_all_episodes_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_podcasts_new_episodes_2_card"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/fragment_podcasts_new_episodes_all_episodes_icon"
        android:text="@string/all_episodes"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>