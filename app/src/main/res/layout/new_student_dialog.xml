<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_student_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:ignore="Autofill">

    <TextView
        android:id="@+id/new_student_dialog_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/alfa_slab_one"
        android:padding="8dp"
        android:text="@string/add_new_student"
        android:textAlignment="center"
        android:textColor="@color/color_grey"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/new_student_dialog_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_student_dialog_headline"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="@string/student_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/new_student_dialog_homework_count_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_student_dialog_name_editText"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="@string/homework_count"
        android:inputType="numberSigned" />

</RelativeLayout>