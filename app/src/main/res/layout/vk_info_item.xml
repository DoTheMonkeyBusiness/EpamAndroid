<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/real_white"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <Button
        android:id="@+id/vk_info_item_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/vk_info_item_about_you_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_edit_button"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/about_you"
        app:srcCompat="@drawable/ic_chat_bubble_gray" />

    <TextView
        android:id="@+id/vk_info_item_about_you_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vk_info_item_about_you_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/vk_info_item_about_you_image"
        android:text="@string/about_you_text"
        android:textColor="@color/color_greyDark"

        />

    <ImageView
        android:id="@+id/vk_info_item_friends_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_about_you_image"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/about_you"
        app:srcCompat="@drawable/ic_group_grey_dark" />

    <TextView
        android:id="@+id/vk_info_item_friends_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vk_info_item_friends_image"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/vk_info_item_about_you_image"
        android:text="@string/friends_count"
        android:textColor="@color/color_greyDark"

        />

    <ImageView
        android:id="@+id/vk_info_item_friend_0_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_about_you_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/friend_photo"
        app:srcCompat="@drawable/ic_sentiment_very_satisfied_red" />

    <ImageView
        android:id="@+id/vk_info_item_friend_1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_about_you_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-12dp"
        android:layout_toStartOf="@id/vk_info_item_friend_0_image"
        android:contentDescription="@string/friend_photo"
        app:srcCompat="@drawable/ic_sentiment_very_satisfied_blue" />

    <ImageView
        android:id="@+id/vk_info_item_friend_2_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_about_you_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-12dp"
        android:layout_toStartOf="@id/vk_info_item_friend_1_image"
        android:contentDescription="@string/friend_photo"
        app:srcCompat="@drawable/ic_sentiment_very_satisfied_green" />

    <ImageView
        android:id="@+id/vk_info_item_location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_friends_image"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/about_you"
        app:srcCompat="@drawable/ic_home_grey_dark" />

    <TextView
        android:id="@+id/vk_info_item_location_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vk_info_item_location_image"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/vk_info_item_about_you_image"
        android:text="@string/location_text"
        android:textColor="@color/color_greyDark"

        />

    <ImageView
        android:id="@+id/vk_info_item_info_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vk_info_item_location_image"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/about_you"
        app:srcCompat="@drawable/ic_more_horiz_blue_dark" />

    <TextView
        android:id="@+id/vk_info_item_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vk_info_item_info_image"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/vk_info_item_about_you_image"
        android:text="@string/show_info"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>