<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/real_white"
>

    <Button
            android:id="@+id/vk_info_item_edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
    />

    <ImageView
            android:id="@+id/vk_info_item_about_you_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/about_you"
            app:srcCompat="@drawable/ic_chat_bubble_gray_dark_24dp"
            android:layout_below="@id/vk_info_item_edit_button"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
    />

    <TextView
            android:id="@+id/vk_info_item_about_you_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_you_text"
            android:textColor="@color/color_greyDark"
            android:layout_toEndOf="@id/vk_info_item_about_you_image"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_alignBottom="@id/vk_info_item_about_you_image"

    />

    <ImageView
            android:id="@+id/vk_info_item_friends_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/about_you"
            app:srcCompat="@drawable/ic_group_grey_dark_24dp"
            android:layout_below="@id/vk_info_item_about_you_image"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
    />

    <TextView
            android:id="@+id/vk_info_item_friends_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends_count"
            android:textColor="@color/color_greyDark"
            android:layout_toEndOf="@id/vk_info_item_about_you_image"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@id/vk_info_item_friends_image"

    />

    <ImageView
            android:id="@+id/vk_info_item_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/about_you"
            app:srcCompat="@drawable/ic_home_grey_dark_24dp"
            android:layout_below="@id/vk_info_item_friends_image"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
    />

    <TextView
            android:id="@+id/vk_info_item_location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_text"
            android:textColor="@color/color_greyDark"
            android:layout_toEndOf="@id/vk_info_item_about_you_image"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@id/vk_info_item_location_image"

    />

    <ImageView
            android:id="@+id/vk_info_item_info_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/about_you"
            app:srcCompat="@drawable/ic_more_horiz_blue_dark_24dp"
            android:layout_below="@id/vk_info_item_location_image"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
    />

    <TextView
            android:id="@+id/vk_info_item_info_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_info"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toEndOf="@id/vk_info_item_about_you_image"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@id/vk_info_item_info_image"

    />


</RelativeLayout>