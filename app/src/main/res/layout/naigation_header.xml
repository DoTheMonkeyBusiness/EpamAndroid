<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:padding="16dp"
>


    <ImageView
            android:id="@+id/navigation_header_android_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_android_red_32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/android_icon"/>
    <TextView
            android:id="@+id/navigation_header_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/navigation_header_android_icon"
            android:text="@string/name"
            android:textColor="@color/color_gray"
            android:textStyle="bold"
            android:textSize="14sp"
    />
    <TextView
            android:id="@+id/navigation_header_mail_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/mail"
            android:textColor="@color/color_gray"
            android:layout_below="@+id/navigation_header_name_textView"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
    />

</RelativeLayout>