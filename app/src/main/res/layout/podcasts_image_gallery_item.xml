<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
>

    <ImageView
            android:id="@+id/podcasts_image_gallery_image_0_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/images"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/photo_0"

    />
    <TextView
            android:id="@+id/podcasts_image_gallery_new_0_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_string"
            android:background="@color/colorPrimary"
            android:textColor="@color/real_white"
            android:layout_alignBottom="@id/podcasts_image_gallery_image_0_imageView"
            android:layout_alignStart="@id/podcasts_image_gallery_image_0_imageView"
            android:layout_alignEnd="@id/podcasts_image_gallery_image_0_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"/>
    <ImageView
            android:id="@+id/podcasts_image_gallery_image_1_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/images"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/podcasts_image_gallery_image_0_imageView"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/photo_1"

    />
    <TextView
            android:id="@+id/podcasts_image_gallery_new_1_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_string"
            android:background="@color/colorPrimary"
            android:textColor="@color/real_white"
            android:layout_alignBottom="@id/podcasts_image_gallery_image_1_imageView"
            android:layout_alignStart="@id/podcasts_image_gallery_image_1_imageView"
            android:layout_alignEnd="@id/podcasts_image_gallery_image_1_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"/>

    <ImageView
            android:id="@+id/podcasts_image_gallery_image_2_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/images"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/podcasts_image_gallery_image_1_imageView"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/photo_2"

    />
    <TextView
            android:id="@+id/podcasts_image_gallery_new_2_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_string"
            android:background="@color/colorPrimary"
            android:textColor="@color/real_white"
            android:layout_alignBottom="@id/podcasts_image_gallery_image_2_imageView"
            android:layout_alignStart="@id/podcasts_image_gallery_image_2_imageView"
            android:layout_alignEnd="@id/podcasts_image_gallery_image_2_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"/>
    <ImageView
            android:id="@+id/podcasts_image_gallery_image_3_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/images"
            android:layout_alignParentStart="true"
            android:layout_below="@id/podcasts_image_gallery_image_0_imageView"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/photo_3"

    />
    <TextView
            android:id="@+id/podcasts_image_gallery_new_3_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_string"
            android:background="@color/colorPrimary"
            android:textColor="@color/real_white"
            android:layout_alignBottom="@id/podcasts_image_gallery_image_3_imageView"
            android:layout_alignStart="@id/podcasts_image_gallery_image_3_imageView"
            android:layout_alignEnd="@id/podcasts_image_gallery_image_3_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"/>
    <ImageView
            android:id="@+id/podcasts_image_gallery_image_not_available_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/images"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/podcasts_image_gallery_image_2_imageView"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/image_not_available"
            />


</RelativeLayout>