<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:parentTag="android.widget.RelativeLayout">

    <ImageView
            android:id="@+id/new_image_item_imageView"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/photo"
            android:layout_width="80dp"
            android:layout_height="80dp"


    />

    <TextView
            android:id="@+id/new_image_item_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_string"
            android:background="@color/colorPrimary"
            android:textColor="@color/real_white"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:layout_alignBottom="@id/new_image_item_imageView"
            android:layout_alignStart="@id/new_image_item_imageView"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"

    />

</merge>