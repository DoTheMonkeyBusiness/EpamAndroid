<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/photo_vk"
    android:contentDescription="@string/vk_image">


    <TextView
        android:id="@+id/vk_image_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vk_image_item_status"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/name"
        android:textColor="@color/real_white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/vk_image_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/online"
        android:textColor="@color/color_greyDark"
        android:textSize="16sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/vk_image_item_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:contentDescription="@string/photo_button"
        app:srcCompat="@drawable/ic_camera_alt_gray_dark"

        />

</RelativeLayout>