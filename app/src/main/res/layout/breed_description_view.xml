<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/breedDescriptionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:text="@string/dog_breed"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/breedDescriptionDogPhoto"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/dog_photo_description"
        android:src="@drawable/ic_help_outline" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorPrimaryDark" />

    <TextView
        android:id="@+id/breedDescriptionRatingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/breed_popularity"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/breedDescriptionRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimaryDark" />

    <com.example.epamandroid.mvp.views.compoundviews.BreedDescriptionGridView
        android:id="@+id/breedDescriptionGridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorPrimaryDark" />

    <TextView
        android:id="@+id/breedDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/breedDescriptionRatingBar"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/no_description"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:textStyle="italic" />


</merge>