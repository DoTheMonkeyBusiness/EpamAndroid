<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/real_white"
>

    <TextView
            android:id="@+id/vk_photos_item_photos_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/photos"
            android:textSize="16sp"
            android:textColor="@color/real_black"
    />

    <TextView
            android:id="@+id/vk_photos_item_photos_count_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/vk_photos_item_photos_textView"
            android:text="@string/zero"
            android:layout_alignBottom="@id/vk_photos_item_photos_textView"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_greyDark"
            android:textSize="16sp"

    />

    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vk_photos_item_photos_textView"
            android:layout_marginTop="14dp"
    >
        <LinearLayout
                android:id="@+id/vk_photos_item_photo_gallery_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <ImageView
                    android:id="@+id/vk_photos_item_photo_0_textView"
                    android:layout_width="232dp"
                    android:layout_height="232dp"
                    android:contentDescription="@string/about_you"
                    app:srcCompat="@drawable/photo_0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
            />
            <ImageView
                    android:id="@+id/vk_photos_item_photo_1_textView"
                    android:layout_width="232dp"
                    android:layout_height="232dp"
                    android:contentDescription="@string/about_you"
                    app:srcCompat="@drawable/photo_1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
            />
            <ImageView
                    android:id="@+id/vk_photos_item_photo_2_textView"
                    android:layout_width="232dp"
                    android:layout_height="232dp"
                    android:contentDescription="@string/about_you"
                    app:srcCompat="@drawable/photo_2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
            />
            <ImageView
                    android:id="@+id/vk_photos_item_photo_3_textView"
                    android:layout_width="232dp"
                    android:layout_height="232dp"
                    android:contentDescription="@string/about_you"
                    app:srcCompat="@drawable/photo_3"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
            />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>