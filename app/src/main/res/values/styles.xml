<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorAccentGrey">@color/colorAccentGreyNight</item>
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="colorBottomSheetHeader">@color/colorBottomSheetHeaderNight</item>
        <item name="colorPhoneNumber">@color/colorPhoneNumberNight</item>
        <!--<item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>-->
        <!--<item name="switchStyle">@style/Widget.AppCompat.CompoundButton.Switch</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppThemeDay" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="colorAccentGrey">@color/colorAccentGreyDay</item>
        <item name="colorBackground">@color/colorBackgroundDay</item>
        <item name="colorBottomSheetHeader">@color/colorBottomSheetHeaderDay</item>
        <item name="colorPhoneNumber">@color/colorPhoneNumberDay</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/emblema_one</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
